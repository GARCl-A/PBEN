Base:

<Base@BoxLayout>
    canvas.before:
        Color:
            rgba: 0.77,0.77,0.77,1
        Rectangle:
            pos: self.pos
            size: self.size

    orientation: "vertical"
    Topo:
        size_hint: 1, .1
    Corpo:
        size_hint: 1, .85
    Rodape:
        size_hint: 1, .05

<Topo@BoxLayout>
    Image:
        source: 'LogoM.png'
        size: self.texture_size
        size_hint: .57, 2
        pos_hint: {'center_x': 30, 'center_y': -0.2}
        
    Label:
        text: 'PBEN'
        color: 0.18, 0.28, 0.40, 1
        bold: True
        font_size: "28sp"
        size_hint: .8, 1

    Image:
        source: 'LogoEN.png'
        size: self.texture_size
        size_hint: .57, 2
        pos_hint: {'center_x': -30, 'center_y': -0.2}
        
<Corpo@BoxLayout>
    Label:
        size_hint: .1, 1
    Interface:
        size_hint: .8, 1
    Label:
        size_hint: .1, 1

<Interface@BoxLayout>
    orientation: "vertical"
    Consulta:
        size_hint: 1, .15
    DadosPrincipais:
        size_hint: 1, .15
    OutrosDados:
        text: 'outros dados'
        size_hint: 1, .45
    Contatos:
        size_hint: 1, .25

<OutrosDados@BoxLayout>
    NumerosAnteriores:
    Organizacao:
    Relacional:

<Consulta@BoxLayout>
    spacing: "20dp"

    Label:
        size_hint: 1,.2
    Label:
        text: 'Número Interno/Nome de Guerra:'
        size_hint: 1, 1
        text_size: self.size
        halign: 'right'
        valign: 'middle'
        color: 0.18, 0.28, 0.40, 1
        bold: True
    TextInput:
        pos_hint: {'center_x': .5, 'center_y': .5}
        size_hint: 1, .4
        multiline: False
        on_text_validate: app.on_text_validate(self)
    Button:
        text: 'Consultar'
        pos_hint: {'center_x': .5, 'center_y': .5}
        size_hint: 1, .4
        on_press: app.on_button_click()
        background_color: 0.7, 0.56, 0.4, 1
        text_color: 0.77,0.77,0.77,1
        bold: True
    Label:
        size_hint: 1,.3

